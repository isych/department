<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mrigor.tasks.department.dao.DepartmentDao">


    <!--mapper for DepartmentWithAverageSalary-->
    <resultMap type="com.mrigor.tasks.department.to.DepartmentWithAverageSalary" id="DepartmentWithAverageSalaryResult">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="averageSalary" column="averagesalary"/>
    </resultMap>

    <!--mapper for Department with employee's list-->
    <resultMap type="Department" id="DepartmentResult">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <collection property="employeeList"
                    column="id"
                    select="com.mrigor.tasks.department.dao.EmployeeDao.getByDep"/>
    </resultMap>


</mapper>