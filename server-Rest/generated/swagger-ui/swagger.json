{
  "swagger" : "2.0",
  "info" : {
    "description" : "This is a sample for swagger-maven-plugin",
    "version" : "v1",
    "title" : "Swagger Maven Plugin Sample",
    "termsOfService" : "http://www.github.com/kongchen/swagger-maven-plugin",
    "contact" : {
      "name" : "Kong Chen",
      "url" : "http://kongch.com",
      "email" : "kongchen@gmail.com"
    },
    "license" : {
      "name" : "Apache 2.0",
      "url" : "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "host" : "petstore.swagger.wordnik.com",
  "basePath" : "/api",
  "tags" : [ {
    "name" : "departments",
    "description" : "Endpoint for Department specific operations"
  }, {
    "name" : "employees",
    "description" : "Endpoint for Employee specific operations"
  } ],
  "schemes" : [ "http", "https" ],
  "paths" : {
    "/rest/departments/{id}/employeess" : {
      "get" : {
        "tags" : [ "departments" ],
        "summary" : "get employee's list from department",
        "description" : "get employee from department",
        "operationId" : "getEmployeesByDepartment",
        "produces" : [ "application/xml", "application/json" ],
        "parameters" : [ {
          "name" : "id",
          "in" : "path",
          "description" : "identifier of department",
          "required" : true,
          "type" : "integer",
          "format" : "int32"
        } ],
        "responses" : {
          "200" : {
            "description" : "successful operation",
            "schema" : {
              "type" : "array",
              "items" : {
                "$ref" : "#/definitions/Employee"
              }
            }
          },
          "404" : {
            "description" : "department with such identifier doesn't exists"
          }
        }
      }
    }
  },
  "definitions" : {
    "Employee" : {
      "type" : "object",
      "properties" : {
        "id" : {
          "type" : "integer",
          "format" : "int32"
        },
        "fullName" : {
          "type" : "string"
        },
        "birthDay" : {
          "type" : "string",
          "format" : "date"
        },
        "salary" : {
          "type" : "integer",
          "format" : "int32"
        },
        "departmentId" : {
          "type" : "integer",
          "format" : "int32"
        }
      }
    }
  }
}